{
  "commitizen": {
    "name": "cz_conventional_commits",
    "version": "0.12.1",
    "tag_format": "v$major.$minor.$patch$prerelease",
    "version_type": "semver",
    "style": [
      [
        "qmark",
        "fg:#ff9d00 bold"
      ],
      [
        "question",
        "bold"
      ],
      [
        "answer",
        "fg:#ff9d00 bold"
      ],
      [
        "pointer",
        "fg:#ff9d00 bold"
      ],
      [
        "highlighted",
        "fg:#ff9d00 bold"
      ],
      [
        "selected",
        "fg:#cc5454"
      ],
      [
        "separator",
        "fg:#cc5454"
      ],
      [
        "instruction",
        ""
      ],
      [
        "text",
        ""
      ],
      [
        "disabled",
        "fg:#858585 italic"
      ]
    ],
    "bump_message": "bump version $current_version \u2192 $new_version",
    "update_changelog_on_bump": true,
    "major_version_zero": true
  }
}